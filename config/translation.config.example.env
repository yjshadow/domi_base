# 翻译服务通用配置
USE_REAL_TRANSLATION=true
TRANSLATION_PROVIDER=baidu  # 可选值: mock, baidu (后续会支持 google, microsoft 等)
TRANSLATION_TIMEOUT=5000
TRANSLATION_MAX_RETRIES=3
TRANSLATION_RETRY_DELAY=1000
TRANSLATION_CACHE_ENABLED=true
TRANSLATION_CACHE_TTL=3600

# 百度翻译服务配置
BAIDU_TRANSLATION_APP_ID=your_app_id_here
BAIDU_TRANSLATION_SECRET_KEY=your_secret_key_here
BAIDU_TRANSLATION_API_URL=https://api.fanyi.baidu.com/api/trans/vip/translate  # 可选，默认使用此URL